<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ImageView
        android:id="@id/act_pc_iv_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_40"
        android:scaleType="fitXY"
        android:src="@drawable/ic_register_suc" />

    <TextView
        android:id="@id/act_pc_tv_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="恭喜您注册成功！"
        android:textColor="@color/top_title_color"
        android:textSize="@dimen/sp_14" />

    <com.min.bailey.client.mvp.ui.widget.supertextview.SuperButton
        android:id="@id/act_login_btn_login"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/ok"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="40dp"
        android:textColor="@color/main_tab_color"
        app:sStrokeColor="@color/main_tab_color"
        app:sStrokeWidth="1dp"
        app:sSelectorNormalColor="@color/white"
        app:sSelectorPressedColor="@color/login_btn_press"
        app:sUseSelector="true"
        app:sCornersRadius="4dp"/>
</LinearLayout>
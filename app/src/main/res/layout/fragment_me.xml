<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/qmui_config_color_white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.qmuiteam.qmui.widget.QMUITopBar
        android:id="@id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/qmui_topbar_height"
        app:qmui_topbar_bg_color="@color/qmui_config_color_white"
        app:qmui_topbar_title_color="@color/top_title_color" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/main_bg_color"
            android:orientation="vertical">


            <com.min.bailey.client.mvp.ui.widget.supertextview.SuperTextView
                android:id="@id/fgm_me_tv_avatar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                app:sLeftIconHeight="45dp"
                app:sLeftIconRes="@drawable/ic_profile_avatar_default"
                app:sLeftIconWidth="45dp"
                app:sLeftViewGravity="left_center"
                app:sRightIconRes="@drawable/ic_profile_arrow_right" />

            <com.min.bailey.client.mvp.ui.widget.supertextview.SuperTextView
                android:id="@id/fgm_me_tv_qr"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:visibility="gone"
                app:sLeftIconRes="@drawable/ic_profile_qr"
                app:sLeftTextColor="@color/tab_middle_text_color"
                app:sLeftTextString="二维码"
                app:sRightIconRes="@drawable/ic_profile_arrow_right"
                app:sRightTextColor="@color/tab_middle_text_color" />

            <com.min.bailey.client.mvp.ui.widget.supertextview.SuperTextView
                android:id="@id/fgm_me_tv_record"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                app:sLeftIconRes="@drawable/ic_profile_qr"
                app:sLeftTextColor="@color/tab_middle_text_color"
                app:sLeftTextString="确认订单记录"
                app:sRightIconRes="@drawable/ic_profile_arrow_right"
                app:sRightTextColor="@color/tab_middle_text_color" />

            <com.min.bailey.client.mvp.ui.widget.supertextview.SuperTextView
                android:id="@id/fgm_me_tv_bank_card"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:clickable="false"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                app:sLeftIconRes="@drawable/ic_profile_bank_card"
                app:sLeftTextColor="@color/tab_middle_text_color"
                app:sLeftTextString="银行卡"
                app:sRightIconRes="@drawable/ic_profile_arrow_right"
                app:sRightTextColor="@color/tab_middle_text_color" />

            <com.min.bailey.client.mvp.ui.widget.supertextview.SuperTextView
                android:id="@id/fgm_me_tv_id_card"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:visibility="gone"
                app:sLeftIconRes="@drawable/ic_profile_id_card"
                app:sLeftTextColor="@color/tab_middle_text_color"
                app:sLeftTextString="实名认证"
                app:sRightIconRes="@drawable/ic_profile_arrow_right"
                app:sRightTextColor="@color/text_right_color" />

            <com.min.bailey.client.mvp.ui.widget.supertextview.SuperTextView
                android:id="@id/fgm_me_tv_service"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:visibility="gone"
                app:sLeftIconRes="@drawable/ic_profile_online_service"
                app:sLeftTextColor="@color/tab_middle_text_color"
                app:sLeftTextString="在线客服"
                app:sRightIconRes="@drawable/ic_profile_arrow_right"
                app:sRightTextColor="@color/tab_middle_text_color" />

            <com.min.bailey.client.mvp.ui.widget.supertextview.SuperTextView
                android:id="@id/fgm_me_tv_logout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/dp_30"
                app:sCenterTextColor="@color/tab_middle_text_color"
                app:sCenterTextString="退出登陆"
                app:sDividerLineType="both" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>